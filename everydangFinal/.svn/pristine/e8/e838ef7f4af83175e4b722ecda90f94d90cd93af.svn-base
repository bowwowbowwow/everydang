@charset "UTF-8";
@import url("../common.css");

body{
    background-color: var(--color-bg1);
}


#header{
    z-index: 2;
}


.wrap{
    display: flex;  
    place-items: center;
    min-height: 100vh;
    
}


.containerbox{
    width: 900px;
    margin: 0 auto;
}




.memberInfo{
    width: 900px;
    height: 250px;

    margin-top: 80px;
    
    display: flex;
    align-items: center;

}



#profile{
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin: 10px;
}

#rank{
    width: 15px;
    height: 15px;
    margin: 3px;
}


#membername{
    font-size: 1.6rem;
    margin: 3px;
    color: var(--font-medium);
}


#message{
    width: 90px;
    height: 25px;
    border: 1px;
    border-radius: 8px;
    background-color: var(--color-purple);
    color: var(--color-white);
    background-image: url("../../image/icon/icon-message-white.png");
    background-repeat : no-repeat;
    background-size : 15px;
    background-position: 9px;
    padding-left: 20px;
    margin-left: 30px;
    margin: 5px;
}

#noti{
    width: 75px;
    height: 25px;
    border: 1px;
    border-radius: 8px;
    background-color: var(--color-purple);
    color: var(--color-white);
    background-image: url("../../image/icon/icon-warning-white.png");
    background-repeat : no-repeat;
    background-size : 15px;
    background-position: 9px;
    padding-left: 20px;
    
}


.postboard{
    font-size: 1.6rem;
    
    padding: 25px;
    height: auto;
    margin-top: 10px;
    margin-bottom: 50px;

    background-color: var(--color-white);
    box-shadow: var(--shadow-1);
    border-radius: 8px;
/* 
    overflow:hidden;
    height:auto;
     */
}


.postboardtxt2{
    color: var(--font-medium);
    font-size: 1.4rem;
}

.spantext{
    color: var(--color-blue);
}


.post{
    border: 1px solid var(--color-grey-200);
    border-radius: 8px;
    margin-top: 15px;
    padding: 18px;
    height: 150px;
}


.title{
    font-size: 1.6rem;
    color: var(--font-high);
}

.date{
    font-size: 1.2rem;
    color: var(--font-desabled);
}

.content{
    font-size: 1.4rem;
    color: var(--font-medium);
    line-height: 20px;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    
}




#modal-title {
    flex: 1;
    text-align: center;
    font-size: 2rem !important;
    font-weight: bold;
}
.modal-body {
    padding: 0 2.4rem 2.4rem;
}
.modal-body .modal-body-top {
    padding: 1.6rem 0;
    
}
.modal-body .modal-body-top {
    border-bottom: var(--bs-modal-header-border-width) solid var(--bs-modal-header-border-color);
}
.modal-body .info{
    font-size: 1.4rem;
    margin-bottom: 0;
}
.modal-body .info #user {
    font-weight: bold;
}
.form-title {
    font-size: 1.7rem;
    font-weight: 600;
    margin-bottom: 1.6rem;
}
.modal-form ul {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
}
.modal-form ul li {
    display: flex;
    gap: 1.2rem;
    align-items: center;
}
input[type="radio"]{
    width: 1.6rem;
    height: 1.6rem;
}
.radio-label {
    font-size: 1.4rem;
}
#dec-7-wrap {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
#dec-7-wrap > div {
    display: flex;
    gap: 1.2rem;
    align-items: center;
}
.textArea-wrap {
    width: 100%;
}
.textArea-wrap textarea {
    height: 8rem;
    resize: none;
    border: 1px solid var(--color-grey-400);
    border-radius: var(--border-radius8);
    padding: 1.2rem;
    font-size: 1.2rem;
}
fieldset {
    padding: 2.4rem 0;
    border-bottom: var(--bs-modal-header-border-width) solid var(--bs-modal-header-border-color);
}
#decBtn {
    width: 100%;
    height: 4.8rem;
    font-size: 1.7rem;
    font-weight: bold;
    background-color: var(--color-blue);
    border: none;
}