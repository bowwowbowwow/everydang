@charset "UTF-8";
@import url("../common.css");


#header{
    z-index: 2;
}

body{
    background-color: var(--color-bg1);
}

#captcha{
    display: flex; 
    justify-content: center;
}


.lastbutton{
    text-align: center; 
    margin: 40px;
}


.submit {
    Width : 250px;
    Height : 45px;
    border-radius : 8px;
    Padding : 0px, 24px, 0px, 24px;
    Gap : 10px;
    background-color: var(--color-blue);
    color: white;
    font-size: 1.4rem;
}


 #logo{
    display: flex;  
    justify-content: center;
    padding : 10%;
}

img{
    width: 150px;
    height: 105px;
}


h1{
    margin: 3px; 
    font-size: 1.8rem;

}

 #container{
    width: 700px;
    margin: auto;
    margin-top: 100px;
    
}

.all-check {
    justify-content: space-between;
    margin: 12.5px;
    height: 25px;
    
}

.wrap{
    display: flex;  
    place-items: center;
    min-height: 100vh;
    
}

hr{
    /* border : 1px solid #F5F5F5; */
    background-color: var(--color-grey-100);
    padding : 0px;
}


input{
    border: none;
    position: relative;
    font-size: 1.3rem;
}

.agree {
    height: 225px;
    padding: 20px;
    border : 1px solid var(--color-grey-100); 
    width: 700px;
    margin-top: 10px;
    margin-bottom: 50px;
    border-radius: 8px;
    background-color: var(--color-white);
    box-shadow: var(--shadow-1);
    
}

.form-check {
    display: flex;
    justify-content: space-between;
    margin: 8px;
    padding: 4px;
    
    
}

.form-check-input{
    flex: 1;
    top: 4px;
}

.form-check-label{
    font-size: 1.3rem;
    color : var(--font-medium);
    top: -4px;
}

label{
    margin: 5px;
    top: -3px;
    

}

button{
    border: 1px solid var(--color-blue);
    height: 30px;
    margin: auto 0 0 auto;
    border-radius: 5px;
    color: var(--color-blue);
    background-color: var(--color-white);
    
}


.memberinfo{
    height: 620px;
    padding: 30px;
    margin-top: 10px;
    width: 700px;
    color : var(--font-medium);
    border : 1px solid var(--color-grey-100); 
    background-color: var(--color-white);
    box-shadow: var(--shadow-1);
}


form{
    font-size: 1.3rem;
    
}


.memberinfolabel {
    display: inline-block;
    width: 90px;

   
}

.duplication{
    display: inline-block; 
    margin: 0 5px; 
    float: right;
    
}

.duplicationbutton {
    background-color: var(--color-bg1);
    color: var(--font-desabled);
    width: 75px;
    height: 35px;
    border-radius: 5px;

}

input[type=checkbox]{
    background-color: #FFFF;
    -webkit-appearance: none;
    -moz-appearance: none;
    margin-left: 16px;
    border: 1px solid var(--color-blue);
    width: 14px;
    height: 14px;
    border-radius: 100%;
}
input[type=checkbox]:checked{
    background-color: white;
    border: 4.5px solid var(--color-blue);
    -webkit-appearance: none;
    -moz-appearance: none;
    margin-left: 16px;
    width: 14px;
    height: 14px;
    border-radius: 100%;
}

input[type=text], input[type=password] {
    height: 35px;
    width: 250px;
    outline: none;
}

.addr{
    border-radius: 5px;
    margin: 3px;
    width : 50px;
}

.addr2{
    border-radius: 5px;
    margin: 3px;
}

.addr3{
    border-radius: 5px;
    margin: 3px;
}

#addrsearch {
    width: 80px;
    height: 35px;
    border-radius: 5px;
    background-color: var(--color-blue);
    color: white;
}