@charset "UTF-8";
@import url("../common.css");

body {
    background-color: var(--color-bg1);
    padding-top: 66px;
}

div{
    /* border: 1px solid #000; */
    box-sizing: border-box;
}
/* profile */
#myProfile {
    background: #fff;
}

#profileDetail {
    width: 1200px;
    margin: auto; 
    padding: 32px 0px;
    display: flex;
    align-items: center;
}

#profileDetail img {
    width: 80px;
    margin-right: 24px;
}

#level {
    display: inline-block;
    width: 15px;
    height: 15px;
    border: 1px solid var(--color-red);
    border-radius: var(--border-radiusround);
    font-size: 0.8rem;
    color: var(--color-red);
    text-align: center;
    line-height: 15px;
    margin-right: 8px;
}
#nickName {
    color: var(--font-medium);
    font-size: 2.0rem;
    font-weight: 700;

}
/* container */
#container {
    width: 1200px;
    margin: auto; 
    display: flex;
}

/* 메뉴 */
#menu {
    width: 222px;
    padding: 75px 0px;
}

#menu h3 {
    font-size: 1.8rem;
    font-weight: 500;
    color: var(--font-medium);
    height: 31px;
    margin-bottom: 12px;
    padding: 0 12px;
}


#menu li a.active {
    background: #fff;
    color: var(--color-blue);
    line-height: 32px;
    margin-bottom: 10px;
}

#menu li a {
    display: block;
    color: var(--color-grey-400);
    font-size: 1.5rem;
    height: 32px;
    padding: 0 12px;
}

#menu li a:hover {
    opacity: .8;
    transition: .5s;
}
#menu ul {
    margin-bottom: 49px;
}
#menu>a {
    display: block;
    margin-bottom: 24px;
    color: var(--font-medium);
    padding: 0 12px;
}
#menu>a i {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 1.5rem;
}
#menu a img {
    width: 16px;
}

/* right */
#myActivities {
    width: 978px;
    padding: 75px 54px;
}

#myActivities #activityTitle {
    padding: 14px 16px;
    height: 45px;
    background: #fff;
    font-size: 1.8rem;
    color: var(--font-high);
    box-shadow: var(--shadow-3);
    border-radius: var(--border-radius8);
    margin-bottom: 12px;
}

#activities {
    display: flex;
    height: 182px;
    background: #fff;
    box-shadow: var(--shadow-3);
    border-radius: var(--border-radius8);
    margin-bottom: 48px;
}
#activities .a {
    text-align: center;
    flex: 1;
    margin: 40px 0px;
}

#activities .a img {
    width: 30px;
}

#activities .a>span {
    display: block;
    margin: 8px 0px 12px 0px;
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--font-medium);
}
.select {
    display: flex;
    justify-content: center;
    align-items: center;
}
.select a {
    color: var(--color-blue);
    font-size: 3.0rem;
}
.select span {
    margin-left: 4px;
    font-size: 1.8rem;
    color: var(--font-medium);
}
/* DM */
#myDM {
    display: flex;
    width: 978px;
    padding: 64px 24px;
    background: #fff;
    box-shadow: var(--shadow-3);
}
#DMlist {
    width: 254px;
    height: 576px;
    border-right: 1px solid var(--color-grey-100);
    overflow: auto;
}
.DMprofile {
    display: flex;
    border-bottom: 1px solid var(--color-grey-100);
    padding: 8px;
}
.DMprofile a {
    display: flex;
    align-items: center;
    color: var(--font-high);
}
.DMprofile a img {
    width: 56px;
}
.user {
    margin-left: 10px;
}
.user span {
    display: block;
}
.user .sendUser {
    color: var(--font-high);
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 4px;
}
.user .DM {
    width: 150px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--font-medium);
    font-size: 1.1rem;
}
/* 채팅 창 */
#DMmain {
    width: 675px;
}
/* 채팅 메인 */
#DMnone {
    text-align: center;
    margin-top: 160px;
}
#DMnone img{
    width: 186px;
}

#DMnone h1 {
    margin: 10px 0;
    font-size: 2.5rem;
    font-weight: 400;
    color: var(--font-high);
}

#DMnone p {
    font-size: 1.5rem;
    color: var(--font-medium);
}

/* 채팅 내부 */
#DMbox {
    display: none;
}
.messageDay {
    padding: 0 28px;
    display: flex;
    flex-direction: column;
}
.messageDay .date {
    display: block;
    height: 32px;
    line-height: 32px;
    text-align: center;
    margin-top: 24px;
    font-size: 1.1rem;
}
.messageLog {
    height: 524px;
    overflow: auto;
}
.chatBox {
    display: flex;
    align-items: center;
    font-size: 1.2rem;
    margin-bottom: 10px;
}
.chatBoxsend {
    align-self: flex-end;
}
.chatBox img {
    width: 32px;
    margin: 0 10px;
}
.text {
    padding: 8px 12px;
    border-radius: 50px;
    line-height: 1.2;
}

.receiveMessage {
    background: #E1F3F2;
}

.sendMessage {
    border: 1px solid var(--color-blue);
}

#textInput {
    margin: auto;
    padding: 10px;
    box-sizing: border-box;
    position: relative;
}
#inputText {
    width: 620px;
    height: 32px;
    border: 1px solid var(--color-grey-100);
    box-shadow: var(--shadow-3);
    border-radius: 50px;
    padding: 0 80px 0 20px;
    margin: 0 20px;
}
#textBtn {
    position: absolute;
    width: 80px;
    top: 17px;
    right: 35px;
    background: none;
    border: none;
    color: var(--color-blue);
    cursor: pointer;
}

.active {
    display: block;
}